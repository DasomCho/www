/* CSS Document */




.visual{ margin-bottom:35px }


/* content */
#content{ overflow:hidden }
#content .contentTop{ overflow:hidden }
#content .video{ width:285px; float:left; margin:0 35px 35px 35px }

#content .news{ position:relative; width:606px; height:283px; float:right; margin:0 35px 35px 0; overflow:hidden; border:1px solid #ccc  }
#content .news h3{ margin:25px 0 25px 25px }
#content .news ul{ width:556px; margin-left:25px }
#content .news ul li{ overflow:hidden }
#content .news ul li img{ float:right }
#content .news dl{ margin-right:0; float:left; width:266px }
#content .news dt{ font-size:1.2em; letter-spacing:-1px; font-weight:bold; line-height:1.5em  }
#content .news dt a:hover{ color:#B60050; text-decoration:underline }
#content .news dd{ color:#666; margin-top:20px; text-align:justify; line-height:1.5em }
#content .news dd a:hover{ color:#B60050; text-decoration:underline }
#content .news dd span{ color:#999; display:block; margin-top:8px; text-align:right }
#content .news .btn{ position:absolute; top:24px; right:10px; overflow:hidden; width:90px }
#content .news .btn li{ float:left; margin-left:8px }

#content .contentMid{ overflow:hidden }
#content .notice{ position:relative; width:283px; height:283px; float:left; margin:0 35px 35px 35px; border:1px solid #ccc }
#content .notice h3{ margin:25px 0 25px 25px }
#content .notice ul{ margin:0 25px 25px 25px}
#content .notice li{ line-height:1.5em; padding: 0 12px 12px 13px; background:url(../images/bullet.jpg) left 6px no-repeat; 
				     font-size:1em; overflow:hidden; text-align:left }
#content .notice li span{ color:#999; float:right }
#content .notice .more{ display:block; position:absolute; top:24px; right:20px; overflow:hidden; width:12px; height:12px }

#content .business{ width:285px; margin:0 35px 35px 0; float:left; position:relative }
#content .business h3{ position:absolute; top:25px; left:25px }
#content .business .btnPrev{ position:absolute; top: 128px; left: 22px }
#content .business .btnNext{ position:absolute; top: 128px; right:22px }

#content .contentRight{ float:right }
#content .stock { width:288px; margin:0 35px 25px 0; border:1px solid #ccc }
#content .stock h3{ margin: 25px 0 17px 25px}
#content .stock .stockCon{ margin-left:42px }
#content .stock ul{ padding: 12px 0 25px 25px; overflow:hidden }
#content .stock li{ width:50px; text-align:center; margin-right:10px; float:left }
#content .stock dl{  }
#content .stock dt{ color:#666 }
#content .stock dd{ color:#333; text-align:center }

#content .quick{ width:288px; margin:0 35px 35px 0; border:1px solid #ccc } 
#content .quick ul{ margin: 20px 0; overflow:hidden }
#content .quick li{ float:left; padding:0 23px; background:url(../images/quickbar.jpg) right center no-repeat }
#content .quick .last{ background:none}

#content .contentBottom{ overflow:hidden }
#content .recruit{ width:285px; float:left; margin:0 35px 35px 35px; position:relative  }
#content .recruit .shortcut{ position:absolute; top:115px; right:25px }

#content .sns{ width:606px; height:283px; float:right; margin:0 35px 35px 0; border:1px solid #ccc; position:relative }
#content .sns h3{ margin:25px 0 25px 25px }
#content .sns .tab{ position:absolute; top:20px; right:45px }
#content .sns .tab li{ float:left; margin-left:33px}
#content .sns .snsCon{ height:170px; overflow-y: scroll; border-top:1px solid #ccc; margin:0 25px 30px 25px; padding:20px 37px 0 0;}
#content .sns .snsCon .faceId{ float:left; margin-right:10px }
#content .sns .snsCon ul{ float:left}
#content .sns .snsCon li{ margin:0 35px 0 15px; padding-left:65px; background:url(../images/faceprofile.jpg) 0 0 no-repeat }
#content .sns .snsCon li span{ color:#999 } 
#content .sns .snsCon li p span{ color:#366}
#content .sns .snsCon .time{  }